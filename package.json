{
  "name": "personal-weather-pwa",
  "version": "0.1.0",
  "description": "A personal PWA weather app inspired by Dark Sky",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "tsx local-dev/server.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "build": "npm run build:frontend && npm run build:lambdas",
    "build:frontend": "NODE_ENV=production vue-tsc && vite build",
    "build:lambdas": "bash scripts/build-lambdas.sh",
    "deploy": "bash scripts/deploy.sh",
    "deploy:lambdas": "bash scripts/deploy.sh --lambdas-only",
    "deploy:frontend": "bash scripts/deploy.sh --frontend-only",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:client": "vitest run",
    "test:client:watch": "vitest",
    "prepare": "husky"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "leaflet": "^1.9.0",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "weather-icons": "^1.3.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.12.0",
    "@types/aws-lambda": "^8.10.159",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^9.19.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.5",
    "typescript": "~5.9.0",
    "vite": "^7.0.0",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,vue}": [
      "eslint --fix",
      "prettier --check"
    ],
    "server/**/*.ts": [
      "eslint --fix",
      "prettier --check"
    ],
    "{src,server}/**/*.{ts,vue}": [
      "bash -c 'npm run test:client'"
    ]
  }
}
